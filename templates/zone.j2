$TTL	86400
@	IN	SOA  {{ nameservers[0] }}. {{ soa_root }}. (
                     {{ serial }}         ; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			  86400 )	; Negative Cache TTL
{% for nameserver in nameservers -%}
@	IN	NS	{{ nameserver }}.
{% endfor %}
{% for record in records -%}
{{ record["label"] }}    {{ record["ttl"] }}    IN    {{ record["type"] }}    {{ record["value"] }}
{% endfor %}
